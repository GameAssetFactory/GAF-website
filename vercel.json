{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.5.2"
    }
  },
  "routes": [
    { "src": "/", "dest": "/api/index.php" },
    { "src": "/(.*\\.php$)", "dest": "/api/$1" }
  ],
  "headers": [
    {
      "source": "/(.*\\.php$)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/html"
        }
      ]
    }
  ]
}