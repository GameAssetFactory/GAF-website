{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.1",
      "excludeFiles": "{.next,*.cache,node_modules,public,app}/**"
    }
  },
  "rewrites": [
    { "source": "/", "destination": "/api/index.php" },
    { "source": "/:page/", "destination": "/api/index.php?page=:page" },
    { "source": "/(.*\\.php$)", "destination": "/api/$1" }
  ],
  "headers": [
    {
      "source": "/(.*\\.php$)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/html"
        }
      ]
    }
  ]
}