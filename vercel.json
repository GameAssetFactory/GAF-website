{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.1"
    }
  },
  "rewrites": [
    { "source": "/", "destination": "/api/index.php" },
    { "source": "/home", "destination": "/api/index.php?page=home" },
    { "source": "/products", "destination": "/api/index.php?page=products" },
    { "source": "/portfolio", "destination": "/api/index.php?page=portfolio" },
    { "source": "/jobs", "destination": "/api/index.php?page=jobs" },
    { "source": "/contact", "destination": "/api/index.php?page=contact" },
    { "source": "/(.*\\.php$)", "destination": "/api/$1" }
  ],
  "headers": [
    {
      "source": "/(.*\\.php$)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/html"
        }
      ]
    }
  ]
}